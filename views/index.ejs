<!DOCTYPE html>
<html>
  <head>
    <title>MovieWeb</title>
    <style>
      body {
        font-family: "Arial", sans-serif;
        background-color: #f5f5f5;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }
      footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #0078d4; /* Puedes ajustar este color a tu preferencia */
        color: white;
        font-weight: 500;
        padding: 10px 0;
        font-size: 15px;
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
      }

      .footerRight {
        text-align: right;
        margin-right: 15px;
      }

      .footerLeft {
        text-align: left;
        margin-left: 15px;
      }

      h1 {
        font-size: 36px;
        color: #333333;
        margin-bottom: 20px; /* Agregamos margen inferior para separar del input */
      }

      form {
        text-align: center;
      }

      input[type="text"] {
        padding: 10px;
        width: 300px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 18px;
        margin-right: 10px;
      }

      button[type="submit"] {
        background-color: #0078d4;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
      }

      button[type="submit"]:hover {
        background-color: #0056b3;
      }

      .checkbox-container {
        display: flex;
        align-items: center;
        margin-top: 20px;
      }

      input[type="checkbox"] {
        width: 20px;
        height: 20px;
        cursor: pointer;
        accent-color: #0078d4;
        margin-right: 10px;
      }

      label[for="keywordSearch"] {
        font-size: 18px;
        color: #333333;
        margin-left: 5px;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <h1>MovieWeb</h1>
    <form id="searchForm" action="/buscar" method="GET">
      <input
        type="text"
        name="q"
        placeholder="Buscar película..."
        id="searchBox"
      />
      <button type="submit">Buscar</button>

      <div class="checkbox-container">
        <input type="checkbox" id="keywordSearch" />
        <label for="keywordSearch">Buscar por palabra clave</label>
      </div>
    </form>

    <script>
      // Escuchar el cambio del checkbox
      document
        .getElementById("keywordSearch")
        .addEventListener("change", function () {
          const searchBox = document.getElementById("searchBox");

          if (this.checked) {
            // Cambiar el placeholder a 'Buscar palabra clave...' si está marcado
            searchBox.placeholder = "Buscar palabra clave...";
          } else {
            // Volver a 'Buscar película...' si no está marcado
            searchBox.placeholder = "Buscar película...";
          }
        });

      // Escuchar el evento submit para cambiar la acción del formulario
      document
        .getElementById("searchForm")
        .addEventListener("submit", function (event) {
          const isKeywordSearch =
            document.getElementById("keywordSearch").checked;

          if (isKeywordSearch) {
            // Cambia la acción para buscar por palabra clave
            this.action = "/buscarKeyword";
          } else {
            // Deja la acción por defecto para buscar películas
            this.action = "/buscar";
          }
        });
    </script>
    <footer>
      <div class="footerLeft">Alumnos: Sofía Keczeli, Juan Luis Martinó.</div>
      <div class="footerRight">Universidad Austral – 2024</div>
    </footer>
  </body>
</html>
